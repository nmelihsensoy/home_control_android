<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tblNumpad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow>

        <Button
            android:id="@+id/btnNumpad1"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#EEE"
            android:text="1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnNumpad2"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#EEE"
            android:text="2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnNumpad3"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#EEE"
            android:text="3"
            android:textSize="20sp" />

    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btnNumpad4"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#EEE"
            android:text="4"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnNumpad5"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#EEE"
            android:text="5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnNumpad6"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#EEE"
            android:text="6"
            android:textSize="20sp" />

    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btnNumpad7"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#EEE"
            android:text="7"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnNumpad8"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#EEE"
            android:text="8"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnNumpad9"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#EEE"
            android:text="9"
            android:textSize="20sp" />

    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btnNumpadLeft"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#E3E3E3"
            android:text="EXIT"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnNumpad0"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#EEE"
            android:text="0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnNumpadRight"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#E3E3E3"
            android:text="OK"
            android:textSize="20sp" />
    </TableRow>

</TableLayout>